<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trainedge.zapdiet.fragment.userinput">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/namep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <EditText
                android:id="@+id/allergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="120dp"
                android:ems="10"
                android:hint="Allergy (if any)"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <EditText
                android:id="@+id/disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="190dp"
                android:ems="10"
                android:hint="Disease(if any)"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <EditText
                android:id="@+id/height1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/age"
                android:layout_alignTop="@+id/weight_in"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="260dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <EditText
                android:id="@+id/height2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="260dp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <Spinner
                android:id="@+id/height_in"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="260dp" />

            <EditText
                android:id="@+id/age"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="260dp"
                android:ems="10"
                android:hint="Age"
                android:inputType="number"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="330dp"
                android:layout_toEndOf="@+id/age"
                android:ems="10"
                android:inputType="numberDecimal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <Spinner
                android:id="@+id/weight_in"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="330dp"
                android:layout_toEndOf="@+id/weight"
                android:splitMotionEvents="false" />

            <Spinner
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="330dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="400dp"
                android:text="BMI :-"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="400dp"
                android:text="0.00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/submit_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="450dp"
                android:background="@drawable/rectangle_button"
                android:text="Submit"
                android:textColor="@color/cardview_light_background" />

        </FrameLayout>
    </ScrollView>
</RelativeLayout>
