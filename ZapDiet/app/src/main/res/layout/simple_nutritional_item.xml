<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itm_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/selectable_background1">

        <TextView
            android:id="@+id/itm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="19dp"
            android:text="item name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/itm_name"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#a7a7a7" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/itm_name"
            android:layout_below="@+id/itm_name"
            android:layout_marginTop="19dp"
            android:text="Protein :-"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView19"
            android:layout_below="@+id/textView19"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="14dp"
            android:text="Fat :-"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView19"
            android:layout_marginEnd="103dp"
            android:text="Carbohydrate :-"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView21"
            android:layout_alignTop="@+id/textView22"
            android:layout_marginBottom="16dp"
            android:text="Kcal :-"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itm_protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView19"
            android:layout_toEndOf="@+id/textView19"
            android:text="gm" />

        <TextView
            android:id="@+id/itm_fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView22"
            android:layout_toEndOf="@+id/textView22"
            android:text="gm" />

        <TextView
            android:id="@+id/itm_carb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView21"
            android:layout_alignBottom="@+id/textView21"
            android:layout_marginStart="39dp"
            android:layout_toEndOf="@+id/itm_kcal"
            android:text="gm" />

        <TextView
            android:id="@+id/itm_kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView23"
            android:layout_toEndOf="@+id/textView23"
            android:text="gm" />
    </RelativeLayout>
</android.support.v7.widget.CardView>