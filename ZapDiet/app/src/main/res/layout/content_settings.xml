<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trainedge.zapdiet.Settings"
    tools:showIn="@layout/activity_settings"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/acc_detail"
        style="@style/com_facebook_loginview_silver_style"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="68dp"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:paddingLeft="30dp"
        android:paddingRight="15dp"
        android:text="Account Details"
        android:textAlignment="textStart"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/share"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="58dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/priv_pol"
        style="@style/com_facebook_loginview_silver_style"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:paddingLeft="30dp"
        android:paddingRight="15dp"
        android:text="Privacy Policy"
        android:textAlignment="textStart"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/about"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/share"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/share" />

    <Button
        android:id="@+id/share"
        style="@style/com_facebook_loginview_silver_style"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_menu_share"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:paddingLeft="30dp"
        android:paddingRight="15dp"
        android:text="Share with friends"
        android:textAlignment="textStart"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/priv_pol"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/logout"
        style="@style/com_facebook_loginview_silver_style"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_phonelink_erase_black_24dp"
        android:paddingLeft="30dp"
        android:paddingRight="15dp"
        android:text="Log Out"
        android:textAlignment="textStart"
        android:textSize="14sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/about"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="145dp"
        app:layout_constraintLeft_toLeftOf="@+id/about"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView2" />

    <Switch
        android:id="@+id/notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:checked="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn suggestions on or off."
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_chat_black_24dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="42dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/about"
        style="@style/com_facebook_loginview_silver_style"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_info_outline_black_24dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:paddingLeft="30dp"
        android:paddingRight="15dp"
        android:text="About"
        android:textAlignment="textStart"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/priv_pol"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/priv_pol" />

</android.support.constraint.ConstraintLayout>
